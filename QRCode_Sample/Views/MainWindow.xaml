<Window x:Class="QRCode_Sample.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QRCode_Sample"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200" Loaded="Window_Loaded" Unloaded="Window_Unloaded">
    <Grid Margin="0,0,-0.4,0.4">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="539*"/>
                <ColumnDefinition Width="654*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,269,196" Grid.RowSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,1,1">
                        <TextBlock Text="Device "/>
                        <TextBlock Text="Password "/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="0,0,0,5">
                        <TextBox x:Name="txtDevice"/>
                        <TextBox x:Name="txtPassword"/>
                        <CheckBox x:Name="cbEnableKeepAlive" Content="Run Keep Alive"/>
                        <CheckBox x:Name="cbAutoReconnect" Content="Auto-Reconnect"/>

                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.ColumnSpan="2" >
                        <Button x:Name="btnConnect" Content="Connect"/>
                        <Button x:Name="btnDisconnect" Content="Disconnect"/>
                    </StackPanel>
                </Grid>
                <StackPanel Grid.Column="1" Orientation="Vertical">
                    <ListBox x:Name="lbDetectedSystem" Height="149"/>
                    <Button x:Name="btnRefresh" Content="Refresh" Height="35"/>

                </StackPanel>
                <ListBox x:Name="lbStateConnect" Grid.Row="1" Grid.ColumnSpan="2" >

                </ListBox>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="143*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Height="84" Margin="0,0,0.4,0" VerticalAlignment="Top" Grid.Row="0">
                    <Button x:Name="btnTrigger" Margin="52,20,0,25" Width="309" Content="Trigger" MouseUp="btnTrigger_MouseUp" MouseDown="btnTrigger_MouseDown" />
                    <CheckBox x:Name="cbLiveDisplay" Width="100" Margin="0,20,0,0" Content="Live Display"/>
                </StackPanel>
                <StackPanel Grid.Row="1">
                    <Image x:Name="imgResultPicture" Margin="0,26,0.4,-0.4" Height="202"/>
                    <Label x:Name="lbReadString" Height="35"/>
                </StackPanel>

            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="13*"/>
                <RowDefinition Height="85*"/>
            </Grid.RowDefinitions>
            <CheckBox Grid.Row="0" x:Name="cbLoggingEnabled" Content="Logging Enabled"/>
            <TextBox x:Name="tbLog" Grid.Row="1"/>


        </Grid>
    </Grid>
</Window>
